import { useState, useEffect } from 'react'
import { Search, Users, Link as LinkIcon, TrendingUp, ExternalLink } from 'lucide-react'
import axios from 'axios'

const API_BASE = import.meta.env.VITE_API_URL || 'http://localhost:8000'

const InfluencerManager = () => {
  const [activeTab, setActiveTab] = useState('search') // search, campaigns, links
  const [searchParams, setSearchParams] = useState({
    niche: 'programming',
    min_followers: 5000,
    max_followers: 50000,
    geo: 'US'
  })
  const [influencers, setInfluencers] = useState([])
  const [campaigns, setCampaigns] = useState([])
  const [trafficSources, setTrafficSources] = useState([])
  const [searching, setSearching] = useState(false)

  useEffect(() => {
    fetchCampaigns()
    fetchTrafficSources()
  }, [])

  const fetchCampaigns = async () => {
    // Mock campaigns for now
    setCampaigns([
      {
        id: 1,
        name: 'Python Course - No Time Pain',
        creativeId: 'creative-abc',
        influencersCount: 20,
        totalClicks: 350,
        totalConversions: 45,
        cvr: 12.9,
        status: 'active'
      },
      {
        id: 2,
        name: 'Design Bootcamp - Career Switch',
        creativeId: 'creative-def',
        influencersCount: 15,
        totalClicks: 220,
        totalConversions: 18,
        cvr: 8.2,
        status: 'completed'
      }
    ])
  }

  const fetchTrafficSources = async () => {
    try {
      const res = await axios.get(`${API_BASE}/api/v1/utm/traffic-sources?limit=50`)
      const sources = (res.data.traffic_sources || []).filter(s => s.influencer_handle)
      setTrafficSources(sources)
    } catch (error) {
      console.error('Failed to fetch traffic sources:', error)
    }
  }

  const searchInfluencers = async () => {
    setSearching(true)
    try {
      // Mock Modash API call for now
      // In production: POST /api/v1/influencers/search with searchParams

      // Simulated results
      setTimeout(() => {
        setInfluencers([
          {
            username: 'tech_educator_pro',
            followers: 15000,
            engagement_rate: 4.5,
            email: 'contact@techeducator.com',
            niche: 'programming',
            location: 'US'
          },
          {
            username: 'code_with_sarah',
            followers: 28000,
            engagement_rate: 3.8,
            email: 'sarah@codemail.com',
            niche: 'programming',
            location: 'US'
          },
          {
            username: 'python_daily',
            followers: 12500,
            engagement_rate: 5.2,
            email: 'hello@pythondaily.com',
            niche: 'programming',
            location: 'US'
          }
        ])
        setSearching(false)
      }, 1500)

    } catch (error) {
      console.error('Search failed:', error)
      setSearching(false)
    }
  }

  return (
    <div className="space-y-6">
      {/* Header */}
      <div>
        <h1 className="text-3xl font-bold text-gray-900">Influencer Manager</h1>
        <p className="mt-2 text-gray-600">
          Find micro-influencers, manage campaigns, and track UTM performance
        </p>
      </div>

      {/* Tabs */}
      <div className="flex gap-2 border-b border-gray-200">
        {[
          { id: 'search', label: 'Search Influencers', icon: Search },
          { id: 'campaigns', label: 'Campaigns', icon: TrendingUp },
          { id: 'links', label: 'UTM Links', icon: LinkIcon }
        ].map(tab => {
          const Icon = tab.icon
          return (
            <button
              key={tab.id}
              onClick={() => setActiveTab(tab.id)}
              className={`px-6 py-3 font-semibold flex items-center gap-2 border-b-2 transition-colors ${
                activeTab === tab.id
                  ? 'border-purple-600 text-purple-600'
                  : 'border-transparent text-gray-600 hover:text-gray-900'
              }`}
            >
              <Icon className="h-5 w-5" />
              {tab.label}
            </button>
          )
        })}
      </div>

      {/* Search Tab */}
      {activeTab === 'search' && (
        <div className="space-y-6">
          {/* Search Form */}
          <div className="card">
            <h3 className="text-lg font-bold text-gray-900 mb-4">Find Micro-Influencers via Modash</h3>

            <div className="grid gap-4 md:grid-cols-2 lg:grid-cols-4">
              <div>
                <label className="block text-sm font-medium text-gray-700 mb-2">Niche</label>
                <select
                  value={searchParams.niche}
                  onChange={(e) => setSearchParams({...searchParams, niche: e.target.value})}
                  className="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent"
                >
                  <option value="programming">Programming</option>
                  <option value="design">Design</option>
                  <option value="english">English</option>
                  <option value="career">Career</option>
                </select>
              </div>

              <div>
                <label className="block text-sm font-medium text-gray-700 mb-2">Min Followers</label>
                <input
                  type="number"
                  value={searchParams.min_followers}
                  onChange={(e) => setSearchParams({...searchParams, min_followers: parseInt(e.target.value)})}
                  className="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent"
                />
              </div>

              <div>
                <label className="block text-sm font-medium text-gray-700 mb-2">Max Followers</label>
                <input
                  type="number"
                  value={searchParams.max_followers}
                  onChange={(e) => setSearchParams({...searchParams, max_followers: parseInt(e.target.value)})}
                  className="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent"
                />
              </div>

              <div>
                <label className="block text-sm font-medium text-gray-700 mb-2">Geography</label>
                <select
                  value={searchParams.geo}
                  onChange={(e) => setSearchParams({...searchParams, geo: e.target.value})}
                  className="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent"
                >
                  <option value="US">United States</option>
                  <option value="GB">United Kingdom</option>
                  <option value="CA">Canada</option>
                </select>
              </div>
            </div>

            <button
              onClick={searchInfluencers}
              disabled={searching}
              className="btn btn-primary mt-6 w-full md:w-auto"
            >
              {searching ? 'Searching...' : 'üîç Find 20 Micro-Influencers'}
            </button>
          </div>

          {/* Results */}
          {influencers.length > 0 && (
            <div className="card">
              <h3 className="text-lg font-bold text-gray-900 mb-4">
                Search Results ({influencers.length})
              </h3>

              <div className="space-y-3">
                {influencers.map((inf, idx) => (
                  <div
                    key={idx}
                    className="p-4 border border-gray-200 rounded-lg hover:border-purple-300 hover:shadow-md transition-all"
                  >
                    <div className="flex items-center justify-between">
                      <div className="flex items-center gap-4">
                        <div className="h-12 w-12 rounded-full bg-gradient-to-br from-purple-400 to-pink-400 flex items-center justify-center text-white font-bold text-lg">
                          {inf.username[0].toUpperCase()}
                        </div>
                        <div>
                          <h4 className="font-semibold text-gray-900">@{inf.username}</h4>
                          <p className="text-sm text-gray-600">{inf.email}</p>
                        </div>
                      </div>

                      <div className="flex items-center gap-6">
                        <div className="text-center">
                          <p className="text-xs text-gray-500">Followers</p>
                          <p className="font-semibold text-gray-900">{inf.followers.toLocaleString()}</p>
                        </div>
                        <div className="text-center">
                          <p className="text-xs text-gray-500">Engagement</p>
                          <p className="font-semibold text-green-600">{inf.engagement_rate}%</p>
                        </div>
                        <button className="btn btn-primary text-sm px-4 py-2">
                          Add to Campaign
                        </button>
                      </div>
                    </div>
                  </div>
                ))}
              </div>
            </div>
          )}
        </div>
      )}

      {/* Campaigns Tab */}
      {activeTab === 'campaigns' && (
        <div className="space-y-6">
          {campaigns.map(campaign => (
            <div key={campaign.id} className="card">
              <div className="flex items-start justify-between mb-4">
                <div>
                  <h3 className="text-xl font-bold text-gray-900">{campaign.name}</h3>
                  <p className="text-sm text-gray-600 mt-1">
                    {campaign.influencersCount} influencers ‚Ä¢ {campaign.status}
                  </p>
                </div>
                <span className={`px-3 py-1 rounded-full text-xs font-semibold ${
                  campaign.status === 'active'
                    ? 'bg-green-100 text-green-800'
                    : 'bg-gray-100 text-gray-800'
                }`}>
                  {campaign.status}
                </span>
              </div>

              <div className="grid grid-cols-3 gap-4">
                <div className="text-center p-4 bg-gray-50 rounded-lg">
                  <p className="text-sm text-gray-600">Total Clicks</p>
                  <p className="text-2xl font-bold text-gray-900">{campaign.totalClicks}</p>
                </div>
                <div className="text-center p-4 bg-gray-50 rounded-lg">
                  <p className="text-sm text-gray-600">Conversions</p>
                  <p className="text-2xl font-bold text-purple-600">{campaign.totalConversions}</p>
                </div>
                <div className="text-center p-4 bg-gray-50 rounded-lg">
                  <p className="text-sm text-gray-600">CVR</p>
                  <p className="text-2xl font-bold text-green-600">{campaign.cvr}%</p>
                </div>
              </div>
            </div>
          ))}
        </div>
      )}

      {/* Links Tab */}
      {activeTab === 'links' && (
        <div className="card">
          <h3 className="text-lg font-bold text-gray-900 mb-4">Generated UTM Links</h3>

          {trafficSources.length === 0 ? (
            <div className="py-12 text-center text-gray-500">
              <LinkIcon className="h-12 w-12 mx-auto text-gray-300 mb-3" />
              <p>No UTM links generated yet</p>
            </div>
          ) : (
            <div className="overflow-x-auto">
              <table className="w-full">
                <thead className="border-b border-gray-200 bg-gray-50">
                  <tr className="text-left text-sm font-semibold text-gray-700">
                    <th className="pb-3 pl-4">UTM ID</th>
                    <th className="pb-3">Influencer</th>
                    <th className="pb-3">Clicks</th>
                    <th className="pb-3">Conv.</th>
                    <th className="pb-3">Revenue</th>
                    <th className="pb-3 pr-4">Link</th>
                  </tr>
                </thead>
                <tbody className="divide-y divide-gray-100">
                  {trafficSources.map((source) => (
                    <tr key={source.id} className="text-sm hover:bg-purple-50 transition-colors">
                      <td className="py-3 pl-4 font-mono text-xs text-gray-600">
                        {source.utm_id}
                      </td>
                      <td className="py-3">
                        <span className="font-medium text-gray-900">@{source.influencer_handle}</span>
                      </td>
                      <td className="py-3 text-gray-600">{source.clicks || 0}</td>
                      <td className="py-3 font-medium text-gray-900">{source.conversions || 0}</td>
                      <td className="py-3 font-medium text-gray-900">
                        ${((source.revenue || 0) / 100).toFixed(2)}
                      </td>
                      <td className="py-3 pr-4">
                        <a
                          href={`${API_BASE}/api/v1/edtech/landing?utm_id=${source.utm_id}`}
                          target="_blank"
                          rel="noopener noreferrer"
                          className="text-purple-600 hover:text-purple-700 flex items-center gap-1"
                        >
                          <ExternalLink className="h-4 w-4" />
                          View
                        </a>
                      </td>
                    </tr>
                  ))}
                </tbody>
              </table>
            </div>
          )}
        </div>
      )}
    </div>
  )
}

export default InfluencerManager
