# Telegram API (get from https://my.telegram.org/apps)
TG_API_ID=
TG_API_HASH=
TG_PHONE=

# Telegram Bot Token (get from @BotFather) - optional, used for some operations
TG_BOT_TOKEN=

# AI Services
ANTHROPIC_API_KEY=
REPLICATE_API_TOKEN=

# Image Search APIs (для поиска готовых фото вместо AI генерации)
# Google Custom Search (рекомендуется, 100 запросов/день бесплатно)
# Инструкция: см. GOOGLE_SEARCH_SETUP.md
GOOGLE_API_KEY=
GOOGLE_CX=

# Дополнительные (опционально)
# Pexels: https://www.pexels.com/api/
# Unsplash: https://unsplash.com/developers
PEXELS_API_KEY=
UNSPLASH_ACCESS_KEY=

# Settings
LOG_LEVEL=
MAX_QUEUE_SIZE=

# ============================================================================
# UTM Tracking API Configuration
# ============================================================================

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/tg_reposter

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT Authentication
JWT_SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60

# Landing Page Settings
LANDING_BASE_URL=https://yourdomain.com/api/v1/landing/l

# Redirect type: "bot" (recommended - preserves utm_id) or "channel" (loses utm_id)
LANDING_REDIRECT_TYPE=bot

# If LANDING_REDIRECT_TYPE=bot - username of your lootbox bot (without @)
TELEGRAM_BOT_USERNAME=your_lootbox_bot

# If LANDING_REDIRECT_TYPE=channel - link to channel (WARNING: utm_id will be lost!)
DEFAULT_TELEGRAM_CHANNEL=https://t.me/sportschannel

# Landing page branding
CHANNEL_NAME=Sports Hub
CHANNEL_DESCRIPTION=Daily sports highlights & discussions

# ============================================================================
# Admin Bot Configuration
# ============================================================================

# Admin Bot Token (create via @BotFather)
ADMIN_BOT_TOKEN=your_admin_bot_token_here

# Tracking API URL (where your FastAPI is running)
TRACKING_API_URL=http://localhost:8000

# Admin JWT Token (get from /api/v1/auth/login)
ADMIN_JWT_TOKEN=your_jwt_token_here

# Admin User IDs (comma-separated Telegram IDs)
# To get your ID: send /start to @userinfobot
ADMIN_IDS=123456789,987654321

# ============================================================================
# Video Storage Configuration
# ============================================================================

# Storage type: "local", "r2", "spaces", or "s3"
# - local: Store videos locally (good for MVP/testing)
# - r2: Cloudflare R2 (RECOMMENDED - cheapest at $0.015/GB/month, FREE egress)
# - spaces: DigitalOcean Spaces ($5/month for 250GB)
# - s3: AWS S3 (standard pricing)
STORAGE_TYPE=local

# Local Storage Path (only if STORAGE_TYPE=local)
STORAGE_LOCAL_PATH=/tmp/utm-videos

# S3-Compatible Storage Settings (for r2, spaces, or s3)
# Bucket name
STORAGE_BUCKET=utm-videos

# Cloudflare R2 Example:
# STORAGE_TYPE=r2
# STORAGE_ENDPOINT=https://[account-id].r2.cloudflarestorage.com
# STORAGE_ACCESS_KEY=your_r2_access_key
# STORAGE_SECRET_KEY=your_r2_secret_key
# STORAGE_REGION=auto
# STORAGE_BUCKET=utm-videos

# DigitalOcean Spaces Example:
# STORAGE_TYPE=spaces
# STORAGE_ENDPOINT=https://nyc3.digitaloceanspaces.com
# STORAGE_ACCESS_KEY=your_spaces_key
# STORAGE_SECRET_KEY=your_spaces_secret
# STORAGE_REGION=nyc3
# STORAGE_BUCKET=utm-videos

# AWS S3 Example:
# STORAGE_TYPE=s3
# STORAGE_ENDPOINT=https://s3.us-east-1.amazonaws.com
# STORAGE_ACCESS_KEY=your_aws_access_key
# STORAGE_SECRET_KEY=your_aws_secret_key
# STORAGE_REGION=us-east-1
# STORAGE_BUCKET=utm-videos

# S3-compatible storage credentials (leave empty for local storage)
STORAGE_ENDPOINT=
STORAGE_ACCESS_KEY=
STORAGE_SECRET_KEY=
STORAGE_REGION=auto

# Recommended: Cloudflare R2
# Pricing: $0.015/GB/month storage, FREE egress (saves $$$ on video delivery)
# Setup: https://developers.cloudflare.com/r2/get-started/
